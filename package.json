{
  "name": "javascript",
  "version": "1.0.0",
  "description": "JavaScript project for learning and collaborative purposes of IT Ternopil community",
  "scripts": {
    "ci:lint": "eslint \"*.js\"",
    "ci:test": "jest --ci --reporters=default --reporters=jest-junit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iTernopil/JavaScript.git"
  },
  "author": "nazmariam <fedirko.mary@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iTernopil/JavaScript/issues"
  },
  "homepage": "https://github.com/iTernopil/JavaScript#readme",
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@commitlint/config-conventional": "^17.0.3",
    "babel-jest": "^28.1.3",
    "commitlint": "^17.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "modulePathIgnorePatterns": [
      "node_modules",
      "coverage"
    ],
    "testRegex": ".*\\.spec\\.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
